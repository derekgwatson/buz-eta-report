# BuzManager OData credentials (DD instance)
BUZ_DD_USERNAME=your-dd-email@example.com
BUZ_DD_PASSWORD=your-dd-password

# BuzManager OData credentials (CBR instance)
BUZ_CBR_USERNAME=your-cbr-email@example.com
BUZ_CBR_PASSWORD=your-cbr-password

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(24))")
FLASK_SECRET=change-me

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database path
DATABASE=instance/customers.db

# Server name (used for URL generation and OAuth redirects)
SERVER_NAME=127.0.0.1:5000

# Environment: development, production, or staging
APP_ENV=development

# API key for /api/v1 endpoints (generate with: python -c "import secrets; print(secrets.token_hex(16))")
BUZ_API_KEY=change-me

# Sentry DSN (optional, production only)
# SENTRY_DSN=https://your-dsn@sentry.io/project-id
